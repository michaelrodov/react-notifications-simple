{
  "name": "react-notifications-simple",
  "version": "0.0.1",
  "description": "React Notifications Simple",
  "main": "webpack.config.js",
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-react-html-attrs": "^2.0.0",
    "babel-plugin-transform-class-properties": "^6.3.13",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.16.0",
    "babel-runtime": "^6.26.0",
    "loaders.css": "^0.1.2",
    "prop-types": "^15.6.0",
    "react": "^15.6.2",
    "react-addons-css-transition-group": "^15.6.2",
    "react-autosuggest": "^9.3.1",
    "react-dom": "^15.6.2",
    "react-dropdown": "^1.3.2",
    "react-loaders": "^2.6.1"
  },
  "devDependencies": {
    "babel-jest": "^21.2.0",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "enzyme": "^3.1.1",
    "enzyme-adapter-react-15": "^1.0.5",
    "extract-text-webpack-plugin": "^3.0.2",
    "guid": "0.0.12",
    "jest": "^21.2.1",
    "jest-fetch-mock": "^1.3.3",
    "node-sass": "^4.6.0",
    "react-test-renderer": "^15.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.9.1",
    "webpack-dev-server": "^2.9.4",
    "webpack-validator": "^3.0.0"
  },
  "scripts": {
    "dev": "webpack-dev-server --content-base  --inline --hot  --port 4000",
    "dev-mock": "cross-env USE_MOCK=true npm run dev",
    "test": "cross-env NODE_ENV=test jest",
    "build-analyze": "cross-env ANALYZE=true npm run build",
    "build": "cross-env NODE_ENV=production webpack -p --progress"
  },
  "authors": [
    "Michael Rodov"
  ],
  "private": false,
  "license": "MIT",
  "jest": {
    "transform": {
      "^.*\\.(jsx?)$": "<rootDir>/node_modules/babel-jest"
    },
    "verbose": false,
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "\\.(s?css)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/src/style"
    ],
    "modulePaths": [
      "<rootDir>/src/js/components"
    ],
    "collectCoverage": true
  },
  "babel": {
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ],
        "presets": [
          [
            "es2015",
            {
              "modules": false
            }
          ],
          "react",
          "stage-0"
        ],
        "env": {
          "start": {
            "presets": [
              "react-hmre"
            ]
          },
          "test": {
            "presets": [
              "es2015",
              "react",
              "stage-0"
            ]
          }
        }
      }
    }
  }
}
